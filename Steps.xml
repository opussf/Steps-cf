<!-- STEPS 1.12.1 -->
<Ui xmlns="http://www.blizzard.com/wow/ui/"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

	<Frame name="Steps_Frame" frameStrata="BACKGROUND" toplevel="false" enableMouse="false" movable="true" parent="UIParent">
		<Size>
			<AbsDimension x="200" y="12"/>
		</Size>
		<Anchors>
			<Anchor point="BOTTOMLEFT"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture setAllPoints="true">
					<Color r="0.5" g="0.0" b="0.0" a="1" />
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<StatusBar name="Steps_StepBar_1" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="200" y="12"/>
				</Size>
				<Anchors>
					<Anchor point="TOP" relativeTo="$parent" relativePoint="TOP"/>
				</Anchors>
				<Layers>
					<Layer level="LOW">
						<FontString name="Steps_StepBarText" inherits="GameFontNormal">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
							<Color r="1" g="1" b="1"/>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad> <!-- artwork -->
						Steps_StepBar_1:SetFrameLevel( 2 );
						Steps_StepBar_1:SetAlpha( 1.0 );
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0.5" g="0.5" b="0"/>
			</StatusBar>
			<StatusBar name="Steps_StepBar_2" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="200" y="12"/>
				</Size>
				<Anchors>
					<Anchor point="TOP" relativeTo="$parent" relativePoint="TOP"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						Steps_StepBar_2:SetFrameLevel( 1 );
						Steps_StepBar_2:SetAlpha( 1.0 );
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0" g="0" b="1" a="0.5" />
			</StatusBar>
		</Frames>
		<Scripts>
			<OnLoad>
				STEPS.OnLoad()
			</OnLoad>
			<OnUpdate>
				STEPS.OnUpdate()
			</OnUpdate>
			<OnEvent>
				STEPS[event](self, ...)
			</OnEvent>
			<OnMouseDown>
				STEPS.OnDragStart()
			</OnMouseDown>
			<OnMouseUp>
				STEPS.OnDragStop()
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>
